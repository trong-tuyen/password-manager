# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf   #kí tự xuống dòng
insert_final_newline = true   #Luôn có duy nhất một dòng trống ở cuối file
max_line_length = 200 # số kí tự tối đa trên mỗi dòng
trim_trailing_whitespace = true   trim_trailing_whitespace
# Matches multiple files with brace expansion notation
# Set default charset

charset = utf-8   #Các file code lưu định dạng (encoding) nào

# 4 space indentation

indent_style = space    #Kiểu thụt lề (indent) là dùng tab hay spaces
indent_size = 4   #Thụt lề vào bao nhiêu spaces

